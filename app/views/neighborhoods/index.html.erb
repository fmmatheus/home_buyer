<p id="notice"><%= notice %></p>

<h1>Neighborhoods</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>X1</th>
      <th>X2</th>
      <th>Y1</th>
      <th>Y2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @neighborhoods.each do |neighborhood| %>
      <tr>
        <td><%= neighborhood.name %></td>
        <td><%= neighborhood.x1 %></td>
        <td><%= neighborhood.x2 %></td>
        <td><%= neighborhood.y1 %></td>
        <td><%= neighborhood.y2 %></td>
        <td><%= link_to 'Show', neighborhood %></td>
        <td><%= link_to 'Edit', edit_neighborhood_path(neighborhood) %></td>
        <td><%= link_to 'Destroy', neighborhood, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

